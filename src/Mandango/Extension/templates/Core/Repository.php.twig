    /**
     * Save documents.
     *
     * @param mixed $documents          A document or an array of documents.
     * @param array $insertManyOptions The options for the batch insert operation (optional).
     * @param array $updateOptions      The options for the update operation (optional).
     */
    public function save($documents, array $insertManyOptions = array(), array $updateOptions = array())
    {
        $repository = $this;

        if (!is_array($documents)) {
            $documents = array($documents);
        }

        $identityMapObject = $this->getIdentityMap();
        $identityMap =& $this->getIdentityMap()->allByReference();
        $collection = $this->getCollection();

        $inserts = array();
        $updates = array();
        foreach ($documents as $document) {
{% if config_class._has_references %}
            $document->saveReferences();
            $document->updateReferenceFields();
{% endif %}
            if ($document->isNew()) {
                $inserts[spl_object_hash($document)] = $document;
            } else {
                $updates[] = $document;
            }
        }

        // insert
        if ($inserts) {
{# Using batch insert #}
{% if config_class.useBatchInsert %}
            $a = array();
            foreach ($inserts as $oid => $document) {
{% if config_class._has_references %}
                if (!$document->isModified()) {
                    continue;
                }
{% endif %}
                $document->preInsertEvent();
{% for name, embedded in config_class.embeddedsOne %}
                if ($mdoc = $document->get{{ name|ucfirst }}()) {
                    $mdoc->preInsertEvent();
                }
{% endfor %}
{% for name, embedded in config_class.embeddedsMany %}
                foreach ($document->get{{ name|ucfirst }}() as $mdoc) {
                    $mdoc->preInsertEvent();
                }
{% endfor %}
                $a[$oid] = $document->queryForSave();
                {{ mandango_id_generator(config_class, "$a[$oid]['_id']", 16) }}
            }

            if ($a) {
                $collection->insertMany(array_values($a), $insertManyOptions);

                foreach ($a as $oid => $data) {
                    $document = $inserts[$oid];

                    $document->setId($data['_id']);
                    $document->setIsNew(false);
                    $document->clearModified();
                    $identityMap[$identityMapObject->idToString($data['_id'])] = $document;
{% if config_class._has_groups %}
                    $document->resetGroups();
{% endif %}
                    $document->postInsertEvent();
{% for name, embedded in config_class.embeddedsOne %}
                if ($mdoc = $document->get{{ name|ucfirst }}()) {
                    $mdoc->postInsertEvent();
                }
{% endfor %}
{% for name, embedded in config_class.embeddedsMany %}
                foreach ($document->get{{ name|ucfirst }}() as $mdoc) {
                    $mdoc->postInsertEvent();
                }
{% endfor %}
                }
            }
{# Without using batch insert #}
{% else %}
            foreach ($inserts as $oid => $document) {
{% if config_class._has_references %}
                if (!$document->isModified()) {
                    continue;
                }
{% endif %}
                // Run pre-insert events for the document and embeddeds
                $document->preInsertEvent();
{% for name, embedded in config_class.embeddedsOne %}
                if ($mdoc = $document->get{{ name|ucfirst }}()) {
                    $mdoc->preInsertEvent();
                }
{% endfor %}
{% for name, embedded in config_class.embeddedsMany %}
                foreach ($document->get{{ name|ucfirst }}() as $mdoc) {
                    $mdoc->preInsertEvent();
                }
{% endfor %}
                $data = $document->queryForSave();
                {{ mandango_id_generator(config_class, "$data['_id']", 16) }}

                $result = $collection->insertOne($data);
                $data['_id'] = $result->getInsertedId();

                $document->setId($data['_id']);
                $document->setIsNew(false);
                $document->clearModified();
                $identityMap[$identityMapObject->idToString($data['_id'])] = $document;

{% if config_class._has_groups %}
                $document->resetGroups();
{% endif %}
                $document->postInsertEvent();
{% for name, embedded in config_class.embeddedsOne %}
                if ($mdoc = $document->get{{ name|ucfirst }}()) {
                    $mdoc->postInsertEvent();
                }
{% endfor %}
{% for name, embedded in config_class.embeddedsMany %}
                foreach ($document->get{{ name|ucfirst }}() as $mdoc) {
                    $mdoc->postInsertEvent();
                }
{% endfor %}
            }
{% endif %}
        }

        // updates
        foreach ($updates as $document) {
            if ($document->isModified()) {
                $document->preUpdateEvent();
{% for name, embedded in config_class.embeddedsOne %}
                if ($mdoc = $document->get{{ name|ucfirst }}()) {
                    $mdoc->preUpdateEvent();
                }
{% endfor %}
{% for name, embedded in config_class.embeddedsMany %}
                foreach ($document->get{{ name|ucfirst }}() as $mdoc) {
                    $mdoc->preUpdateEvent();
                }
{% endfor %}
                $query = $document->queryForSave();
                $collection->updateOne(array('_id' => $this->idToMongo($document->getId())), $query, $updateOptions);
                $document->clearModified();
{% if config_class._has_groups %}
                $document->resetGroups();
{% endif %}
                $document->postUpdateEvent();
{% for name, embedded in config_class.embeddedsOne %}
                if ($mdoc = $document->get{{ name|ucfirst }}()) {
                    $mdoc->postUpdateEvent();
                }
{% endfor %}
{% for name, embedded in config_class.embeddedsMany %}
                foreach ($document->get{{ name|ucfirst }}() as $mdoc) {
                    $mdoc->postUpdateEvent();
                }
{% endfor %}
            }
        }
    }

    /**
     * Delete documents.
     *
     * @param mixed $documents A document or an array of documents.
     */
    public function delete($documents)
    {
        if (!is_array($documents)) {
            $documents = array($documents);
        }

        $ids = array();
        foreach ($documents as $document) {
            $document->preDeleteEvent();
{% for name, embedded in config_class.embeddedsOne %}
            if ($mdoc = $document->get{{ name|ucfirst }}()) {
                $mdoc->preDeleteEvent();
            }
{% endfor %}
{% for name, embedded in config_class.embeddedsMany %}
            foreach ($document->get{{ name|ucfirst }}() as $mdoc) {
                $mdoc->preDeleteEvent();
            }
{% endfor %}
            $ids[] = $id = $this->idToMongo($document->getId());
        }

        foreach ($documents as $document) {
            $document->processOnDelete();
        }

        $this->getCollection()->deleteMany(array('_id' => array('$in' => $ids)));

        foreach ($documents as $document) {
            $document->postDeleteEvent();
{% for name, embedded in config_class.embeddedsOne %}
            if ($mdoc = $document->get{{ name|ucfirst }}()) {
                $mdoc->postDeleteEvent();
            }
{% endfor %}
{% for name, embedded in config_class.embeddedsMany %}
            foreach ($document->get{{ name|ucfirst }}() as $mdoc) {
                $mdoc->postDeleteEvent();
            }
{% endfor %}
        }

        $identityMapObject = $this->getIdentityMap();
        $identityMap =& $this->getIdentityMap()->allByReference();
        foreach ($documents as $document) {
            unset($identityMap[$identityMapObject->idToString($document->getId())]);
            $document->setIsNew(true);
            $document->setId(null);
        }
    }

