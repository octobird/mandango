     */
    public function getLastParentRepository()
    {
        $parentClass = '{{ config_class.inheritance.class }}';
        do {
            $metadata = $this->getMandango()->getMetadata($parentClass);
            if (false !== $metadata['inheritance']) {
                $parentClass = $metadata['inheritance']['class'];
